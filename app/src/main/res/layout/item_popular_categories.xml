<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/popular_categories_width_px_70"
    android:layout_height="@dimen/popular_categories_height_px_80"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_2sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:background="@drawable/bg_top_categories_item">
    <ImageView
        android:id="@+id/categoryImage"
        android:layout_width="wrap_content"
        tools:src="@drawable/ic_flight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/px_13_text_size"
        android:fontFamily="@font/gilroy_medium"
        android:textColor="@color/white_90"
        tools:text="Flight"
        app:layout_constraintTop_toBottomOf="@+id/categoryImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>